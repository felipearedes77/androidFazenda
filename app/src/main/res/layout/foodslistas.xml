<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/containerImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="20dp"
        app:cardElevation="8dp">
        <ImageView
            android:id="@+id/imgbanana"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tiltlebanana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banana Prata"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/containerImg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/descricaobanana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="70dp"
        android:text="@string/descricao"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/containerImg"
        app:layout_constraintTop_toBottomOf="@+id/tiltlebanana" />
    <TextView
        android:id="@+id/txtpreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verique o PreÃ§o no Carrinho"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/containerImg"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/descricaobanana"
        />
    <Button
        android:id="@+id/btncarrinhobanana"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/descricaobanana"
        app:layout_constraintStart_toEndOf="@id/txtpreco"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Carrinho"
        android:textStyle="bold"
        android:textSize="12sp"
        android:backgroundTint="@color/green"
        />


</androidx.constraintlayout.widget.ConstraintLayout>