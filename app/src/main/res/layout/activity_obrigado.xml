<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".obrigado">
    <TextView
        android:id="@+id/Obrigado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Obrigado por Adquirir nosso Produto!"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Obrigado"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Logo Chegará no Seu Endereço"
        android:textStyle="bold"
        />
    <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btn_voltarhome"
    style="@style/buttom"
    android:text="Voltar para Home"
    android:textSize="14sp"
    android:backgroundTint="@color/green"
    android:textColor="@color/white"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/Obrigado"
    />


</androidx.constraintlayout.widget.ConstraintLayout>